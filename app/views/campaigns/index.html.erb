<table cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td valign="top">
      <% ['active', 'future', 'expired'].each do |type|-%>
        <h2><%= @campaigns[type]['label'] %></h2>
        <% @campaigns[type]['data'].each do |campaign| -%>
          <%= campaign.title %><br />
        <% end -%>
      <% end -%>
    </td>
    <td valign="top">
      <h1>Active Campaigns</h1>
      <% @campaigns['active']['data'].each do |campaign| %>
        <p>From <%= campaign.start_date %> to <%= campaign.end_date %></p>
        <%= link_to image_tag(campaign.image.url), "/campaigns/#{campaign.id}" %>
      <% end -%>
      <h1>Next Campaigns</h1>
      <% @campaigns['future']['data'].each do |campaign| %>
        <p>From <%= campaign.start_date %> to <%= campaign.end_date %></p>
        <%= image_tag(campaign.image.url) %>
      <% end -%>
    </td>
  </tr>
</table>
